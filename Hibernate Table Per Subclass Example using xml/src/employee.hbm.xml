<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.pravin.hibernate.Employee" table="TPS_EMPLOYEE">
		<id name="id">
			<generator class="increment"></generator>
		</id>
		<property name="name"></property>
		<joined-subclass name="com.pravin.hibernate.Regular_Employee"
			table="TPS_REGULAR_EMP">
			<key column="eid"></key>
			<property name="salary"></property>
			<property name="bonus"></property>
		</joined-subclass>
		<joined-subclass name="com.pravin.hibernate.Contract_Employee"
			table="TPS_CONTARCT_EMP">
			<key column="eid"></key>
			<property name="pay_per_hour"></property>
			<property name="contract_duration"></property>
		</joined-subclass>
	</class>
</hibernate-mapping>  